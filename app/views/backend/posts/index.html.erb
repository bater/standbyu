<p id="notice"><%= notice %></p>

<h1>資源管理</h1>
<%= link_to 'New Post', new_backend_post_path, class: "btn btn-success" %>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>City</th>
      <th>District</th>
      <th>Adress</th>
      <th>Phone</th>
      <th>Service time</th>
      <th>Tag</th>
      <th>Description</th>
      <th>Url</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, [:backend, post] %></td>
        <td><%= TaiwanCity.get(post.city)  %></td>
        <td><%= TaiwanCity.get(post.district)  %></td>
        <td><%= post.adress %></td>
        <td><%= post.phone %></td>
        <td><%= post.service_time %></td>
        <td><%= post.tag %></td>
        <td><%= post.description %></td>
        <td><%= post.url %></td>
        <td><%= link_to 'Edit', edit_backend_post_path(post) %></td>
        <td><%= link_to 'Destroy', [:backend, post], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
